<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/mainMenuActivity"
    tools:context="com.example.lena.run.MainMenuActivity">

    <TextView
        android:id="@+id/mainMenuHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hauptmenÃ¼"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/mainMenuHeadline"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"
        android:src="@drawable/line_grey"
        />

    <ListView
        android:id="@+id/listview"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"
        />

</android.support.constraint.ConstraintLayout>