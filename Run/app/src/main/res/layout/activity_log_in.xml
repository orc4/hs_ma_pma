<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="de.hsmannheim.pma.run.LogInActivity"
    android:id="@+id/logInActivity">

    <TextView
        android:id="@+id/logInHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="log in"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/logInHeadline"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"
        android:src="@drawable/line_grey"
        />

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/login"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/nameTextField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/loginImage"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>

    <EditText
        android:id="@+id/passwordTextField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="passwort"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/nameTextField"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>

    <Button
        android:id="@+id/logInButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="anmelden"
        android:onClick="onButtonNextActivityClick"
        app:layout_constraintTop_toBottomOf="@id/passwordTextField"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="registrieren"
        android:onClick="onButtonNextActivityClick"
        app:layout_constraintTop_toBottomOf="@id/logInButton"
        app:layout_constraintLeft_toLeftOf="@id/logInActivity"
        app:layout_constraintRight_toRightOf="@id/logInActivity"/>


</android.support.constraint.ConstraintLayout>
